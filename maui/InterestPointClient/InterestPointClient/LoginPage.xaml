<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterestPointClient.LoginPage"
             Title="Queue Detecting - Intrest Point">
    <VerticalStackLayout Margin="80">
        <Label
                Text="Welcome!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Your username"/>
        <Entry x:Name="passwordEntry" Placeholder="Your password" IsPassword="True"/>
        <Button Text="Login"/>
    </VerticalStackLayout>
</ContentPage>